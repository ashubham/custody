{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "removeComments": false,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "outDir": "built/",
        "typeRoots": [
            "./typings",
            "./node_modules/@types"
        ],
        "types": [
            "@slack/client",
            "node",
            "jasmine",
            "facebook-chat-api"
        ]
    },
    "exclude": [
        "built",
        "node_modules",
        "spec/**/*",
        "typings"
    ]
}